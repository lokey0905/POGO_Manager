<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory/>
    <PreferenceCategory
        android:title="@string/preferences_downloadSettings_Title"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false">

        <SwitchPreferenceCompat
            android:key="customTabsOff"
            android:title="@string/preferences_customTabsOff_Title"
            android:icon="@drawable/baseline_open_in_browser_24"
            app:summary="@string/preferences_customTabsOff_Summary"
            android:persistent="true"
            android:defaultValue="false" />

        <SwitchPreferenceCompat
            android:key="allow_download_on_non_arm64"
            android:title="@string/preferences_allow_download_on_non_arm64_Title"
            android:icon="@drawable/ic_baseline_browser_updated_24"
            app:summary="@string/preferences_allow_download_on_non_arm64_Summary"
            android:persistent="true"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preferences_locationSettings_Title"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false">

        <Preference
            android:key="location_accuracy"
            android:title="@string/preferences_location_accuracy_Title"
            android:icon="@drawable/ic_baseline_share_location_24"
            app:summary="@string/preferences_location_accuracy_Summary" />

        <SwitchPreferenceCompat
            android:key="location_accuracy_switch"
            android:title="@string/preferences_location_accuracy_switch_Title"
            android:icon="@drawable/baseline_edit_location_24"
            app:summary="@string/preferences_location_accuracy_switch_Summary"
            app:iconSpaceReserved="false"
            android:persistent="true"
            android:defaultValue="false" />

        <SwitchPreferenceCompat
            android:key="location_check_A12"
            android:title="@string/preferences_location_check_A12_Title"
            android:icon="@drawable/baseline_not_listed_location_24"
            app:summary="@string/preferences_location_check_A12_Summary"
            android:persistent="true"
            android:defaultValue="false" />

        <SwitchPreferenceCompat
            android:key="location_accuracy_check"
            android:title="@string/preferences_location_accuracy_check_Title"
            android:icon="@drawable/baseline_notifications_off_24"
            app:summary="@string/preferences_location_accuracy_check_Summary"
            android:persistent="true"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preferences_pokeSettings_Title"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false">

        <Preference
            android:key="disable_auto_update_pok"
            android:title="@string/preferences_disable_auto_update_pok_Title"
            android:icon="@drawable/ic_baseline_sync_disabled_24"
            app:summary="@string/preferences_disable_auto_update_pok_Summary" />

        <SwitchPreferenceCompat
            android:key="allow_download_on_non_samsung"
            android:title="@string/preferences_allow_download_on_non_samsung_Title"
            android:icon="@drawable/ic_baseline_download_24"
            app:summary="@string/preferences_allow_download_on_non_samsung_Summary"
            android:persistent="true"
            android:defaultValue="false" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preferences_mhnSettings_Title"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false">

        <Preference
            android:key="disable_auto_update_mhn"
            android:title="@string/preferences_disable_auto_update_mhn_Title"
            android:icon="@drawable/ic_baseline_sync_disabled_24"
            app:summary="@string/preferences_disable_auto_update_mhn_Summary" />
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/about"
        app:allowDividerAbove="false"
        app:allowDividerBelow="false">

        <Preference
            android:key="shopee"
            android:title="我的蝦皮賣場"
            android:icon="@drawable/ic_baseline_shopping_bag_24"
            app:summary="歡迎購買賣場內刷機好的手機，也可幫忙代刷機" />

        <Preference
            android:key="facebook"
            android:title="我的FaceBook紛絲專頁"
            android:icon="@drawable/ic_baseline_email_24"
            app:summary="方便的話，可以來幫我按個讚喔~" />

        <Preference
            android:key="discord"
            android:title="我的Discord群組"
            android:icon="@drawable/ic_baseline_mark_unread_chat_alt_24"
            app:summary="歡迎加入討論各式各樣的問題" />

        <Preference
            android:key="github"
            android:title="Github開源程式碼"
            android:icon="@drawable/ic_baseline_code_24" />

        <Preference
            android:key="app"
            android:title="APP版本"
            android:icon="@drawable/ic_baseline_info_24"
            app:summary="" />
    </PreferenceCategory>
</PreferenceScreen>
